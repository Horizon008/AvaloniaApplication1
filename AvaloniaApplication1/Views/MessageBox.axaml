<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="150"
        x:Class="AvaloniaApplication1.Views.MessageBox"
        Title="MessageBox">
	<Grid ShowGridLines="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>

		</Grid.RowDefinitions>

		<StackPanel HorizontalAlignment="Center" Margin="0 30 0 0">
			<TextBlock Text="{Binding TitleText}"></TextBlock>

		</StackPanel>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">

			<TextBlock Text="{Binding MainText}" TextWrapping="Wrap"></TextBlock>
		</StackPanel>
	</Grid>
</Window>
