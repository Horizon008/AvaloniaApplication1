<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaApplication1.Views.Window1"
        Title="Window1">
	<Grid>
		<StackPanel>
			<Button Content="О1" Command="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100"/>
			<Button  Content="О2" Command="{Binding Greeting2}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100"/>
			<Button  Content="О3" Command="{Binding Greeting3}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="100"/>
			<TextBlock Text="{Binding MainText}"/>
		</StackPanel>
	</Grid>
	
</Window>
